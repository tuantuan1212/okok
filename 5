local Players = game:GetService("Players")
local lp = Players.LocalPlayer

local function checkBeliAndShutdown()
    local stats = lp:WaitForChild("leaderstats", 10)  -- Äá»£i leaderstats trong 10 giÃ¢y
    if stats then
        local beli = stats:FindFirstChild("Beli")
        if beli then
            print("[ğŸ’°] Beli hiá»‡n táº¡i:", beli.Value) -- Debug Ä‘á»ƒ kiá»ƒm tra
            if beli.Value < 50000000 then
                warn("[âš ï¸] Beli dÆ°á»›i 50M! Äang thoÃ¡t game...")
                lp:Kick("Beli dÆ°á»›i 50M! HÃ£y kiáº¿m thÃªm tiá»n trÆ°á»›c khi vÃ o láº¡i.")
            else
                print("[âœ…] Beli Ä‘á»§, tiáº¿p tá»¥c cháº¡y.")
            end
        else
            warn("[âŒ] KhÃ´ng tÃ¬m tháº¥y Beli!")
        end
    else
        warn("[âŒ] KhÃ´ng tÃ¬m tháº¥y leaderstats!")
    end
end

-- Kiá»ƒm tra ngay khi cháº¡y script
checkBeliAndShutdown()

-- Kiá»ƒm tra láº¡i má»—i 10 giÃ¢y
while task.wait(10) do
    checkBeliAndShutdown()
end
