local Players = game:GetService("Players")
local lp = Players.LocalPlayer

local function checkBeliAndShutdown()
    local stats = lp:FindFirstChild("leaderstats")
    if stats then
        local beli = stats:FindFirstChild("Beli")
        if beli and beli.Value < 2000000 then
            warn("[⚠️] Beli dưới 2M! Đang thoát game...")
            lp:Kick("Beli dưới 2M! Hãy kiếm thêm tiền trước khi vào lại.")
        else
            print("[✅] Beli đủ, tiếp tục chạy.")
        end
    else
        warn("[⚠️] Không tìm thấy leaderstats!")
    end
end

-- Kiểm tra ngay lập tức khi script chạy
checkBeliAndShutdown()

-- Kiểm tra định kỳ mỗi 10 giây
while wait(10) do
    checkBeliAndShutdown()
end
