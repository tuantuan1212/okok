local lp = game.Players.LocalPlayer
local PlayerGui = lp:FindFirstChild("PlayerGui")

task.wait(5) -- Ch·ªù d·ªØ li·ªáu load

local stats = lp:FindFirstChild("leaderstats")

if stats then
    local beli = stats:FindFirstChild("Beli") or stats:FindFirstChild("Money") or stats:FindFirstChild("Cash") or stats:FindFirstChild("MoneyValue")

    if beli then
        print("üîπ S·ªë Beli:", beli.Value)

        -- T·∫°o GUI hi·ªÉn th·ªã s·ªë Beli tr√™n m√†n h√¨nh
        local screenGui = Instance.new("ScreenGui", PlayerGui)
        local textLabel = Instance.new("TextLabel", screenGui)

        textLabel.Size = UDim2.new(0.5, 0, 0.1, 0) -- Chi·∫øm 50% chi·ªÅu r·ªông, 10% chi·ªÅu cao
        textLabel.Position = UDim2.new(0.25, 0, 0.05, 0) -- CƒÉn gi·ªØa tr√™n c√πng
        textLabel.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- M√†u n·ªÅn ƒëen
        textLabel.TextColor3 = Color3.fromRGB(255, 255, 255) -- Ch·ªØ m√†u tr·∫Øng
        textLabel.TextScaled = true
        textLabel.Text = "S·ªë Beli: " .. beli.Value

        -- Ki·ªÉm tra n·∫øu d∆∞·ªõi 50M th√¨ tho√°t game
        if beli.Value < 50000000 then
            task.wait(2) -- Ch·ªù 2 gi√¢y tr∆∞·ªõc khi out
            lp:Kick("B·∫°n c√≥ d∆∞·ªõi 50M Beli. T·ª± ƒë·ªông tho√°t.") -- VƒÉng kh·ªèi game
        end
    else
        print("‚ùå Kh√¥ng t√¨m th·∫•y Beli!")
    end
else
    print("‚ùå Kh√¥ng t√¨m th·∫•y leaderstats!")
end
