local lp = game.Players.LocalPlayer
local stats = lp:FindFirstChild("leaderstats")

if stats then
    local beli = stats:FindFirstChild("Beli")
    if beli then
        print("Số Beli của bạn:", beli.Value)
    else
        print("Không tìm thấy Beli trong leaderstats!")
    end
else
    print("Không tìm thấy leaderstats!")
end
