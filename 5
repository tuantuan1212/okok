local lp = game.Players.LocalPlayer
local StarterGui = game:GetService("StarterGui")

task.wait(5) -- Chờ 5 giây để đảm bảo dữ liệu đã load

local stats = lp:FindFirstChild("leaderstats")

if stats then
    local beli = stats:FindFirstChild("Beli") -- Hoặc "Money", "Cash"

    if beli then
        -- 🔥 Hiển thị thông báo số Beli trên màn hình
        StarterGui:SetCore("SendNotification", {
            Title = "Thông báo",
            Text = "Số Beli của bạn: " .. beli.Value,
            Duration = 5
        })

        -- Kiểm tra và thoát game nếu dưới 50M Beli
        if beli.Value < 50000000 then
            task.wait(1)
            game:Shutdown()
        end
    else
        print("Không tìm thấy biến Beli!")
    end
else
    print("Không tìm thấy leaderstats!")
end
