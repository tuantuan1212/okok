local lp = game.Players.LocalPlayer
local stats = lp:FindFirstChild("leaderstats")

if stats then
    local beli = stats:FindFirstChild("Beli")
    if beli then
        game.StarterGui:SetCore("SendNotification", {
            Title = "Số Beli";
            Text = "Bạn có: " .. beli.Value .. " Beli!";
            Duration = 5;
        })
    else
        game.StarterGui:SetCore("SendNotification", {
            Title = "Lỗi";
            Text = "Không tìm thấy Beli!";
            Duration = 5;
        })
    end
else
    game.StarterGui:SetCore("SendNotification", {
        Title = "Lỗi";
        Text = "Không tìm thấy leaderstats!";
        Duration = 5;
    })
end
